.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/self_img.png'),style="height:140px;width:126px;")
      h3(title="")
        a#name(href="/")= config.title
      if theme.description
        .description
          p= theme.description

  ul.social-links
    if theme.twitter
      li
        a(href="https://twitter.com/" + theme.twitter target="_blank")
          i.fa.fa-twitter
    if theme.instagram
      li
        a(href="http://instagram.com/" + theme.instagram target="_blank")
          i.fa.fa-instagram
    if theme.rss
      li
        a(href= url_for(theme.rss) target="_blank")
          i.fa.fa-rss
    if theme.weibo
      li
        a(href="http://weibo.com/" + theme.weibo target="_blank")
          i.fa.fa-weibo
    if theme.facebook
      li
        a(href="http://facebook.com/" + theme.facebook target="_blank")
          i.fa.fa-facebook
    if theme.github
      li
        a(href="https://github.com/" + theme.github target="_blank")
          i.fa.fa-github
    if theme.codewars
      li
        a(href="https://www.codewars.com/users/" + theme.codewars target="_blank")
          i.fa.fa-lightbulb-o
    if theme.codepen
      li
        a(href="https://codepen.io/" + theme.codepen target="_blank")
          i.fa.fa-codepen
  include personalDesc

  include footer
